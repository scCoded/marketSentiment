<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/gradient"
    android:padding="16dp"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Sentiments App"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="28sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/thanksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title3TextView"
        android:layout_marginTop="32dp"
        android:text="Thank you for taking the Market Sentiments Test! Your results have been recorded and you may now logout..."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/ScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thanksTextView"
        android:layout_marginTop="32dp"
        android:text="Your final score is: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ScoreTextView"

        android:layout_centerVertical="true"
        android:layout_marginTop="166dp"
        android:background="#3F51B5"
        android:text="Logout" />

    <TextView
        android:id="@+id/userGoodbye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:drawableLeft="@mipmap/user_round"

        android:textSize="18sp" />


</RelativeLayout>